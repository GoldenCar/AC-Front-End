<div class="container nopassword-page" style="margin-top: 100px;" data-user-id="{{userId}}">    
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            
            <!-- Div Panel -->
            <div class="panel panel-primary" >
                    
                    <!-- Panel Heading -->
                    <div class="panel-heading">
                        <h5 class="panel-title">Welcome to your compliance portal. Your account has been created. Please create a password</h5>
                    </div><!-- End panel heading -->
                    
                    <!-- Panel body -->
                    <div class="panel-body" >
                            
                        <form class="form-horizontal" role="form">
                            
                            <!-- Username -->
                            <div class="input-group input-username">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><input type="password" class="form-control pw" name="password" placeholder="Password">
                            </div>
                                
                            <!-- Password -->
                            <div class="input-group input-password" style="margin-top: 10px;">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><input type="password" class="form-control confirm-pw" name="password" placeholder="Password confirm">
                            </div>

                            <div class="form-group login-button" style="margin-top: 10px;">
                                <div class="col-sm-12 controls">
                                    <button class="btn btn-success save-password">Save password</button>
                                </div>
                            </div>

                        </form><!-- ENd form -->  
                        <h4 class="validation-error text-danger"></h4>   
                        <h4 class="validation-success text-success"></h4>

                    </div><!-- ENd panel body -->
            </div><!-- End panel group -->  

        </div><!-- End col div -->
    </div><!-- End container -->


